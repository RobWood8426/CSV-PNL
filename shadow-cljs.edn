;; shadow-cljs configuration
{:deps true

 :builds
 {:browser
  {:target     :browser
   :output-dir "dist/browser"
   :asset-path "/browser"
   :modules {:main {:entries [CSV-PNL.core]}}
   :compiler-options {:reader-features #{:browser}}
   }
  
  :node
  {:target     :node-library
   :output-to  "dist/node/main.js"
   :main       CSV-PNL.core
   :exports {:create-pnl CSV-PNL.core/create-pnl}
   :compiler-options {:reader-features #{:node}}}
  
  :node-tests
  {:target :node-test
   :output-to "target/node-tests.js"
   :autorun true}
  
  :browser-tests
  {:target :browser-test
   :test-dir "target/browser-test"
   :devtools {:http-port 8021
              :http-root "target/browser-test"}}
  
  }}
